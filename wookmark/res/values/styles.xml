<resources>

    <style name="AppTheme" parent="android:Theme.Light"/>

    <style name="AboutFragmentFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="AboutFragmentFont.Heading">
        <item name="android:textColor">#7F7F7F</item>
    </style>

    <style name="AboutFragmentFont.Detail">
        <item name="android:autoLink">all</item>
    </style>

    <style name="MenuEntry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MenuEntryLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>